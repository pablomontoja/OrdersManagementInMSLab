<table>
<tr>
<td>
<%= form_tag institutions_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], id: 'small', autocomplete: 'off' %>
    <%= submit_tag "Search", id: 'btsmall' %>
  </p>
<% end %>
</td>
<td width="70%">
<h1>Listing Institutions</h1>
</td>
</tr>  
</table>

<%= link_to 'New Institution', new_institution_path, class: "btn btn-default" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name <span class="glyphicon glyphicon-search"></th>
      <th>Short name <span class="glyphicon glyphicon-search"></th>
      <th>Type</th>
      <th>Address line1</th>
      <th>Address line2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.short_name %></td>
        <td><%= institution.i_type %></td>
        <td><%= institution.address_line1 %></td>
        <td><%= institution.address_line2 %></td>
        <td><%= link_to 'Show', institution %></td>
        <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @institutions, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to 'New Institution', new_institution_path, class: "btn btn-default" %>
