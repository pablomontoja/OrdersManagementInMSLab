<%= form_for(@grant) do |f| %>
  <% if @grant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grant.errors.count, "error") %> prohibited this grant from being saved:</h2>

      <ul>
      <% @grant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>*<br>
    <%= f.text_field :name, autocomplete: 'off' %>
  </div>
  <div class="field">
    <%= f.label :short_name %>*<br>
    <%= f.text_field :short_name, autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label "Team" %>*<br>
    <%= f.select :team_id, options_from_collection_for_select(@teams, :id, :name, @grant.team_id ), {prompt: '---  Wybierz zespół  ---'} %>
  </div>

  <div class="field">
    <%= f.check_box :active, style: "height: auto !important; width:50px" %><%= f.label "Active" %>    
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
