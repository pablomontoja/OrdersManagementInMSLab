<h1>Listing Teams</h1>

<%= link_to 'New team', new_team_path, class: "btn btn-default" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Institution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.institution.name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @teams, renderer: BootstrapPagination::Rails %>
<br>
<%= link_to 'New team', new_team_path, class: "btn btn-default" %>


