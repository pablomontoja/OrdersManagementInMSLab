<h1>Listing Techniques</h1>

<%= link_to 'New Technique', new_technique_path, class: "btn btn-default" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th>Price icho</th>
      <th>Price ncc</th>
      <th>Price cc</th>
      <th>Price science</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @techniques.each do |technique| %>
      <tr>
        <td><%= technique.name %></td>
        <td><%= technique.short_name %></td>
        <td><%= number_to_currency( technique.price_icho , unit: "zł", format: "%n %u" )  %></td>
        <td><%= number_to_currency( technique.price_ncc , unit: "zł", format: "%n %u" )   %></td>
        <td><%= number_to_currency( technique.price_cc , unit: "zł", format: "%n %u" )   %></td>
        <td><%= number_to_currency( technique.price_science , unit: "zł", format: "%n %u" )   %></td>
        <td><%= link_to 'Show', technique %></td>
        <td><%= link_to 'Edit', edit_technique_path(technique) %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Destroy', technique, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @techniques, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to 'New Technique', new_technique_path, class: "btn btn-default" %>
