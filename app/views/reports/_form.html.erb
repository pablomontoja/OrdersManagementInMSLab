<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>*<br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date_from %>*<br>
    <%= f.text_field :date_from %>
  </div>
  <div class="field">
    <%= f.label :date_to %>*<br>
    <%= f.text_field :date_to %>
  </div>

  <div class="field">
    <%= f.label "Type of Report" %>*<br>
    <%= f.select :i_type, options_for_select([ "NON-COMMERCIAL", "COMMERCIAL", "1 INSTITUTION", "1 GRANT" ], f.object.i_type ), {prompt: '---  Select Type of Report  ---'},  id: "i_type" %>    
  </div>

  <div class="field">
    <%= f.label :institution %>*<br>
    <%= f.select :institution, options_from_collection_for_select(@institutions, :id, :name, f.object.institution), {prompt: '---  Select Institution  ---'},  id: "client_institution_id_ps" %>    
  </div>
  <div class="field">
    <%= f.label :team %>*<br>
    <%= f.select :team, options_from_collection_for_select(@teams, :id, :name, f.object.team), {prompt: '---  Select Team of Institution  ---'}, id: "client_team_id_ps" %>
  </div>
  <div class="field">
    <%= f.label :grant %>*<br>
    <%= f.select :grant, options_from_collection_for_select(@grants, :id, :name, f.object.grant), {prompt: '---  Select Grant  ---'}, id: "grant_id" %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
